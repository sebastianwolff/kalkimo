# Kalkimo Development Environment Variables
# Copy this file to .env.local for local development

# ===========================================
# BACKEND CONFIGURATION
# ===========================================

# Environment: Development | Staging | Production
APP_ENV=Development

# Data storage root path (for encrypted flatfiles)
DATA_ROOT=./data

# Secrets provider: LocalDev | Vault | KMS
SECRETS_PROVIDER=LocalDev

# Master KEK reference (handle, not the actual key!)
# For LocalDev: path to local key file
# For Vault/KMS: key identifier/ARN
MASTER_KEK_REF=./secrets/master.key

# Auth issuer for JWT validation
AUTH_ISSUER=https://localhost:5000

# JWT signing key (only for development, use secret store in production)
JWT_SECRET=CHANGE_ME_IN_PRODUCTION_USE_SECRET_STORE

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================

# Backend API URL
VITE_API_BASE_URL=http://localhost:5000

# ===========================================
# DOCKER CONFIGURATION
# ===========================================

# Compose project name
COMPOSE_PROJECT_NAME=kalkimo

# ===========================================
# OPTIONAL: EXTERNAL SERVICES
# ===========================================

# Azure Key Vault (if using Azure)
# AZURE_KEY_VAULT_URL=https://your-vault.vault.azure.net/

# AWS KMS (if using AWS)
# AWS_KMS_KEY_ID=arn:aws:kms:region:account:key/key-id

# HashiCorp Vault (if using Vault)
# VAULT_ADDR=http://localhost:8200
# VAULT_TOKEN=your-token
