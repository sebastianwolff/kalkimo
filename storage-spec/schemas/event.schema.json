{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kalkimo.app/schemas/event.schema.json",
  "title": "ProjectEvent",
  "description": "Changeset/Event für Kalkimo Planner (append-only JSONL)",
  "type": "object",
  "required": ["changeSetId", "projectId", "userId", "timestamp", "baseVersion", "operations"],
  "properties": {
    "changeSetId": {
      "type": "string",
      "format": "uuid",
      "description": "Eindeutige ID des Changesets"
    },
    "projectId": {
      "type": "string",
      "format": "uuid"
    },
    "userId": {
      "type": "string",
      "description": "ID des Benutzers, der die Änderung vorgenommen hat"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "baseVersion": {
      "type": "integer",
      "minimum": 0,
      "description": "Projekt-Version auf der die Änderung basiert"
    },
    "resultVersion": {
      "type": "integer",
      "minimum": 1,
      "description": "Resultierende Projekt-Version nach Anwendung"
    },
    "operations": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/operation" },
      "description": "Liste der Änderungsoperationen"
    },
    "description": {
      "type": "string",
      "description": "Optionale Beschreibung der Änderung"
    },
    "isUndo": {
      "type": "boolean",
      "default": false,
      "description": "True wenn dies ein Undo-Event ist"
    },
    "undoOfChangeSetId": {
      "type": "string",
      "format": "uuid",
      "description": "ID des Changesets, das rückgängig gemacht wird"
    }
  },

  "$defs": {
    "operation": {
      "type": "object",
      "required": ["op", "path"],
      "properties": {
        "op": {
          "enum": ["add", "remove", "replace", "move", "copy"],
          "description": "Operationstyp (JSON Patch kompatibel)"
        },
        "path": {
          "type": "string",
          "pattern": "^/.*",
          "description": "JSON Pointer zum Zielfeld"
        },
        "value": {
          "description": "Neuer Wert (für add, replace)"
        },
        "from": {
          "type": "string",
          "pattern": "^/.*",
          "description": "Quellpfad (für move, copy)"
        },
        "oldValue": {
          "description": "Vorheriger Wert (für Undo-Unterstützung)"
        }
      },
      "allOf": [
        {
          "if": { "properties": { "op": { "enum": ["add", "replace"] } } },
          "then": { "required": ["value"] }
        },
        {
          "if": { "properties": { "op": { "enum": ["move", "copy"] } } },
          "then": { "required": ["from"] }
        }
      ]
    }
  }
}
