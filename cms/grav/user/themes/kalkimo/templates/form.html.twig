{# Contact Form Page #}
{% extends 'partials/base.html.twig' %}

{% block content %}
{# Page Hero with title #}
<section class="km-page-hero">
  <div class="km-page-hero-inner">
    <h1>{{ page.title }}</h1>
  </div>
</section>

{# Form Content #}
<section class="km-section">
  <div class="container">
    <div class="km-form-page">
      {{ page.content|raw }}

      {% if config.plugins.form.enabled %}
        {% include "forms/form.html.twig" %}
      {% else %}
        <p>{{ grav.language.getActive == 'de'
          ? 'Das Kontaktformular ist derzeit nicht verfügbar. Bitte versuchen Sie es später erneut.'
          : 'The contact form is currently unavailable. Please try again later.' }}
        </p>
      {% endif %}
    </div>
  </div>
</section>
{% endblock %}
